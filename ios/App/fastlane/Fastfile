# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# Required environment variables:
# - APPSTORE_KEY_ID: App Store Connect API key ID.
# - APPSTORE_ISSUER_ID: App Store Connect API issuer ID.
# - APPSTORE_P8: Contents of the App Store Connect .p8 private key (raw, not base64-encoded).
# - MATCH_PASSWORD: Password for the encrypted certificates/profiles repo used by `match`.
# - MATCH_GIT_URL: Git URL of the repository used by `match` for code signing assets.
# - GIT_AUTHORIZATION: GitHub Personal Access Token (PAT) with access to MATCH_GIT_URL repo.
#                      Must have 'repo' scope to access private repositories.
#                      Provide as a raw token (will be automatically formatted and encoded).
# - APPLE_TEAM_ID: Your Apple Developer Team ID (10-character string found in App Store Connect).
# - APP_IDENTIFIER: (Optional) Bundle identifier for the app. Defaults to "com.enterprise.support".
#
# Optional environment variables for upload retry configuration:
# - FASTLANE_UPLOAD_MAX_RETRIES: Maximum number of upload retry attempts (default: 3)
# - FASTLANE_UPLOAD_RETRY_DELAY: Initial retry delay in seconds (default: 60)
#   Note: Delay doubles with each retry attempt (exponential backoff)

default_platform(:ios)

# App bundle identifier - can be overridden via APP_IDENTIFIER environment variable
APP_IDENTIFIER = ENV["APP_IDENTIFIER"] || "com.enterprise.support"

# Helper method to format and encode Git authorization token
# Handles both raw tokens and already-encoded tokens
def prepare_git_authorization(token)
  return nil if token.nil? || token.empty?
  
  # Try to detect if the token is already base64 encoded by attempting to decode it
  begin
    decoded = Base64.strict_decode64(token)
    # If it decodes successfully and contains a colon (username:token format), it's already encoded
    if decoded.include?(":")
      return token
    end
  rescue ArgumentError
    # Not valid base64, treat as raw token
  end
  
  # Format as "x-access-token:token" and base64 encode for GitHub authentication
  Base64.strict_encode64("x-access-token:#{token}")
end

# Helper method to configure Xcode project with code signing settings.
# Uses values from match environment variables set by the match action.
# Expects `match` to have been run first so that it exports the required environment variables.
# If those environment variables are not set, this method will fail explicitly to ensure
# proper configuration rather than falling back to potentially incorrect hardcoded values.
#
# @param app_identifier [String] The app's bundle identifier in reverse-DNS format
#   (for example, "com.enterprise.support"). This identifier must match the one used
#   when running `match` because it is interpolated directly into the environment variable names,
#   e.g., "sigh_#{app_identifier}_appstore_team-id" and "sigh_#{app_identifier}_appstore_profile-name".
def configure_code_signing(app_identifier)
  UI.user_error!("app_identifier cannot be nil or empty") if app_identifier.nil? || app_identifier.empty?
  
  # Match sets environment variables like sigh_com.enterprise.support_appstore_team-id
  team_id = ENV["sigh_#{app_identifier}_appstore_team-id"]
  profile_name = ENV["sigh_#{app_identifier}_appstore_profile-name"]
  
  # Fail explicitly if match didn't set the required environment variables
  UI.user_error!("Team ID not found. Ensure match has been run before calling configure_code_signing.") if team_id.nil? || team_id.empty?
  UI.user_error!("Profile name not found. Ensure match has been run before calling configure_code_signing.") if profile_name.nil? || profile_name.empty?
  
  update_code_signing_settings(
    use_automatic_signing: false,
    path: "App.xcodeproj",
    targets: "App",
    team_id: team_id,
    bundle_identifier: app_identifier,
    profile_name: profile_name,
    code_sign_identity: "Apple Distribution"
  )
end

platform :ios do
  desc "Generate certificates and provisioning profiles using match"
  lane :setup_certificates do
    # Setup CI environment with temporary keychain
    # This creates a new temporary keychain and sets it as default
    # Required for proper certificate management in CI environments
    setup_ci

    # Setup App Store Connect API authentication
    # Note: APPSTORE_P8 should contain the raw .p8 key content (not base64-encoded)
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_KEY_ID"],
      issuer_id: ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"],
      is_key_content_base64: false
    )

    # Generate certificates and provisioning profiles with match
    # Note: GIT_AUTHORIZATION should be a GitHub Personal Access Token (raw token)
    # It will be formatted as "x-access-token:token" and base64 encoded for git authentication
    git_auth = prepare_git_authorization(ENV["GIT_AUTHORIZATION"])

    match(
      type: "appstore",
      app_identifier: APP_IDENTIFIER,
      git_url: ENV["MATCH_GIT_URL"],
      readonly: false,
      git_basic_authorization: git_auth,
      team_id: ENV["APPLE_TEAM_ID"]
    )

    # Configure Xcode project with code signing settings
    configure_code_signing(APP_IDENTIFIER)
  end

  desc "Build and upload to App Store"
  lane :release do
    # Explicitly select Xcode using the DEVELOPER_DIR environment variable
    # This ensures Fastlane uses the correct Xcode installation for finding tools like iTMSTransporter
    # The DEVELOPER_DIR is set by the setup-xcode GitHub Action
    if ENV["DEVELOPER_DIR"] && !ENV["DEVELOPER_DIR"].empty?
      xcode_path = ENV["DEVELOPER_DIR"]
      # Remove /Contents/Developer suffix if present to get the Xcode.app path
      xcode_path = xcode_path.sub(/\/Contents\/Developer\/?$/, "") if xcode_path.include?("/Contents/Developer")
      
      # Validate that the path looks like a valid Xcode installation
      if !xcode_path.empty? && xcode_path.end_with?(".app") && File.directory?(xcode_path)
        UI.important("Setting Xcode path to: #{xcode_path}")
        xcode_select(xcode_path)
      else
        UI.message("DEVELOPER_DIR is set but doesn't point to a valid Xcode.app directory, skipping xcode_select")
      end
    else
      UI.message("DEVELOPER_DIR not set, using system default Xcode")
    end

    # Setup CI environment with temporary keychain
    # This creates a new temporary keychain and sets it as default
    # Required for proper certificate management in CI environments
    setup_ci

    # Setup App Store Connect API authentication
    # Note: APPSTORE_P8 should contain the raw .p8 key content (not base64-encoded)
    # Store the API key for later use with upload_to_app_store
    api_key = app_store_connect_api_key(
      key_id: ENV["APPSTORE_KEY_ID"],
      issuer_id: ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"],
      is_key_content_base64: false
    )

    # Setup code signing with match
    # Note: GIT_AUTHORIZATION should be a GitHub Personal Access Token (raw token)
    # It will be formatted as "x-access-token:token" and base64 encoded for git authentication
    git_auth = prepare_git_authorization(ENV["GIT_AUTHORIZATION"])

    match(
      type: "appstore",
      app_identifier: APP_IDENTIFIER,
      git_url: ENV["MATCH_GIT_URL"],
      readonly: true,
      git_basic_authorization: git_auth,
      team_id: ENV["APPLE_TEAM_ID"]
    )

    # Configure Xcode project with code signing settings
    configure_code_signing(APP_IDENTIFIER)

    # Build the app with optimizations for faster CI/release builds
    # xcargs optimizations:
    # - COMPILER_INDEX_STORE_ENABLE=NO: Disables Xcode index store (not needed for CI/release builds)
    # - SKIP_MACRO_VALIDATION=YES: Skips macro validation to speed up builds
    # - CLANG_ENABLE_MODULE_DEBUGGING=NO: Disables module debugging symbols for faster builds
    # - DEBUG_INFORMATION_FORMAT=dwarf-with-dsym: Uses DWARF with dSYM for crash symbolication
    # - ENABLE_BITCODE=NO: Disables bitcode processing (no longer required by Apple as of Xcode 14)
    # - ONLY_ACTIVE_ARCH=NO: Ensures all architectures are built (standard for release builds)
    # - SWIFT_COMPILATION_MODE=wholemodule: Optimizes Swift compilation for release builds
    xcargs_optimizations = [
      "COMPILER_INDEX_STORE_ENABLE=NO",
      "SKIP_MACRO_VALIDATION=YES",
      "CLANG_ENABLE_MODULE_DEBUGGING=NO",
      "DEBUG_INFORMATION_FORMAT=dwarf-with-dsym",
      "ENABLE_BITCODE=NO",
      "ONLY_ACTIVE_ARCH=NO",
      "SWIFT_COMPILATION_MODE=wholemodule"
    ].join(" ")
    
    # Get the provisioning profile name set by match
    profile_name = ENV["sigh_#{APP_IDENTIFIER}_appstore_profile-name"]
    UI.user_error!("Provisioning profile name not found. Ensure match has been run successfully.") if profile_name.nil? || profile_name.empty?
    
    build_app(
      scheme: "App",
      workspace: "App.xcworkspace",
      export_method: "app-store",
      xcargs: xcargs_optimizations,
      export_options: {
        provisioningProfiles: {
          APP_IDENTIFIER => profile_name
        }
      }
    )

    # Validate IPA before upload
    ipa_path = lane_context[SharedValues::IPA_OUTPUT_PATH]
    UI.user_error!("IPA file not found at: #{ipa_path}") unless File.exist?(ipa_path)
    
    ipa_size_mb = File.size(ipa_path) / 1024.0 / 1024.0
    UI.important("üì¶ IPA size: #{ipa_size_mb.round(2)} MB")
    
    # Minimum IPA size check - basic Capacitor iOS apps are typically 5+ MB
    # This catches build failures that produce empty or corrupt IPA files
    min_ipa_size_mb = 1.0
    UI.user_error!("IPA file is suspiciously small (#{ipa_size_mb.round(2)} MB). Build may have failed.") if ipa_size_mb < min_ipa_size_mb
    
    UI.success("‚úÖ IPA validation passed")

    # Update copyright with current year for App Store metadata
    # Apple requires copyright year to match current year for validation
    copyright_path = File.join(Dir.pwd, "fastlane", "metadata", "en-US", "copyright.txt")
    
    # Verify the copyright file exists before updating
    UI.user_error!("Copyright file not found at: #{copyright_path}") unless File.exist?(copyright_path)
    
    # Read the existing copyright to extract the company name (everything after the year)
    # This preserves the company name even if it changes in the future
    existing_copyright = File.read(copyright_path).strip
    
    # Extract company name by removing the leading year if present
    # Format is expected to be: "YYYY Company Name" or "Company Name"
    parts = existing_copyright.split(' ', 2)
    if parts[0] =~ /^\d{4}$/ && parts.length > 1
      # First part is a year, use the rest as company name
      company_name = parts[1]
    else
      # No year found, use the entire text as company name
      company_name = existing_copyright
    end
    
    current_year = Time.now.year
    copyright_text = "#{current_year} #{company_name}"
    
    File.write(copyright_path, copyright_text)
    UI.important("üìù Updated copyright to: #{copyright_text}")

    # Upload to App Store with retry logic
    UI.important("üöÄ Starting App Store upload...")
    UI.important("üì¶ IPA path: #{ipa_path}")
    UI.important("üîë API Key configured: #{!api_key.nil?}")
    
    # Retry configuration - can be customized via environment variables
    max_retries = ENV["FASTLANE_UPLOAD_MAX_RETRIES"] ? ENV["FASTLANE_UPLOAD_MAX_RETRIES"].to_i : 3
    initial_retry_delay = ENV["FASTLANE_UPLOAD_RETRY_DELAY"] ? ENV["FASTLANE_UPLOAD_RETRY_DELAY"].to_i : 60
    retries = max_retries
    retry_delay = initial_retry_delay
    
    begin
      upload_to_app_store(
        api_key: api_key,
        app_identifier: APP_IDENTIFIER,
        skip_metadata: false,
        skip_screenshots: true,
        submit_for_review: false,
        precheck_include_in_app_purchases: false,
        force: true
      )
      UI.success("‚úÖ Upload completed successfully!")
    rescue => ex
      retries -= 1
      if retries > 0
        UI.important("‚ö†Ô∏è  Upload failed: #{ex.message}")
        UI.important("üîÑ Retrying in #{retry_delay} seconds... (#{retries} attempts remaining)")
        sleep(retry_delay)
        retry_delay *= 2  # Exponential backoff
        retry
      else
        UI.error("‚ùå Upload failed after all retry attempts")
        UI.error("Error details: #{ex.message}")
        UI.error("Backtrace: #{ex.backtrace.first(5).join("\n")}")
        raise
      end
    end
  end
end

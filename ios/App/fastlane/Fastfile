# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# Required environment variables:
# - APPSTORE_KEY_ID: App Store Connect API key ID.
# - APPSTORE_ISSUER_ID: App Store Connect API issuer ID.
# - APPSTORE_P8: Contents of the App Store Connect .p8 private key (raw, not base64-encoded).
# - MATCH_PASSWORD: Password for the encrypted certificates/profiles repo used by `match`.
# - MATCH_GIT_URL: Git URL of the repository used by `match` for code signing assets.
# - GIT_AUTHORIZATION: Authorization token or credentials (if required) to access MATCH_GIT_URL.

default_platform(:ios)

platform :ios do
  desc "Generate certificates and provisioning profiles using match"
  lane :setup_certificates do
    # Setup App Store Connect API authentication
    # Note: APPSTORE_P8 should contain the raw .p8 key content (not base64-encoded)
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_KEY_ID"],
      issuer_id: ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"],
      is_key_content_base64: false
    )

    # Generate certificates and provisioning profiles with match
    # Note: GIT_AUTHORIZATION should be a base64-encoded string in the format "username:token"
    # If it's just a token, encode it with a placeholder username for GitHub PAT
    git_auth = ENV["GIT_AUTHORIZATION"]
    if git_auth && !git_auth.include?(":")
      # If GIT_AUTHORIZATION is just a token, format it as "x-access-token:token" and encode
      git_auth = Base64.strict_encode64("x-access-token:#{git_auth}")
    end

    match(
      type: "appstore",
      app_identifier: "com.barings.support",
      git_url: ENV["MATCH_GIT_URL"],
      readonly: false,
      git_basic_authorization: git_auth
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    # Setup App Store Connect API authentication
    # Note: APPSTORE_P8 should contain the raw .p8 key content (not base64-encoded)
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_KEY_ID"],
      issuer_id: ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"],
      is_key_content_base64: false
    )

    # Setup code signing with match
    # Note: GIT_AUTHORIZATION should be a base64-encoded string in the format "username:token"
    # If it's just a token, encode it with a placeholder username for GitHub PAT
    git_auth = ENV["GIT_AUTHORIZATION"]
    if git_auth && !git_auth.include?(":")
      # If GIT_AUTHORIZATION is just a token, format it as "x-access-token:token" and encode
      git_auth = Base64.strict_encode64("x-access-token:#{git_auth}")
    end

    match(
      type: "appstore",
      app_identifier: "com.barings.support",
      git_url: ENV["MATCH_GIT_URL"],
      readonly: true,
      git_basic_authorization: git_auth
    )

    # Build the app
    build_app(
      scheme: "App",
      workspace: "App.xcworkspace",
      export_method: "app-store"
    )

    # Upload to App Store
    upload_to_app_store(
      skip_metadata: true,
      submit_for_review: false
    )
  end
end
